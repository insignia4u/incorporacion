<div id="in-nav">
  <div class="container">
    <div class="row">
      <div class="span12">
        <ul class="pull-right">
          <% if current_user %>
            <li>
              <%= current_user.full_name if current_user %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Sign up', new_user_registration_path %>
            </li>
            <li><%= link_to('Login as User', new_user_session_path) %></li>
          <% end -%>
          <% if current_candidate %>
            <li><%= current_candidate.full_name %></li>
          <% else %>
            <li>
              <%= link_to 'Login as Candidate', new_candidate_session_path %>
            </li>
          <% end -%>

          <% if current_user || current_candidate %>
            <li><%= link_to 'Logout', destroy_user_session_path,
                            method: :delete %></li>
          <% end -%>
        </ul>
        <a id="logo" href="<%= root_url %>">
          <% if current_company %>
          <h4><%= current_company.name %></h4>
          <% else %>
          <h4>My<strong>Admin</strong></h4>
          <% end -%>
        </a>
      </div>
    </div>
  </div>
</div>
