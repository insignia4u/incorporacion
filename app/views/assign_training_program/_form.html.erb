<%= form_for training_candidate,
             url:training_program_assign_index_path, method: :post,
             html: { class:'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', model:training_candidate %>
  <div class="control-group">
    <%= f.label :candidate, class: 'control-label' %>
    <div class="controls">
      <%= f.select :candidate_id,
                 SelectDecorator.collection(candidates, :first_name) %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit 'Assign', class: 'btn' %>
    </div>
  </div>
<% end -%>
