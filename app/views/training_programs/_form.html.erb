<%= form_for training_program, html: { class:'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', model:training_program %>

  <div class="control-group">
    <%= f.label :name, class:'control-label' %>
    <div class="controls">
      <%= f.text_field :name, autofocus:true %></div>
  </div>

  <fieldset class="form-inline">
    <legend>Tasks</legend>
    <%= f.fields_for :tasks, tasks do |ft| %>
      <%= render 'task_form', f: ft %> <br>
    <% end %>
  </fieldset>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Create", class:'btn' %></div>
  </div>
<% end -%>
