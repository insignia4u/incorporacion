<div class="container">
  <div class="row">
    <div class="span12">
      <h2>Sign up</h2>

      <%= form_for resource, as:resource_name,
                   url:registration_path(resource_name),
                   class:'form-horizontal' do |f| %>
        <% if resource.errors %>
          <div class="alert alert-error">
            <%= devise_error_messages! %>
          </div>
        <% end -%>

        <div class="control-group">
          <%= f.fields_for :company_attributes do |c| %>
            <%= c.label :name, "Company Name", class:'control-label' %>
            <div class="controls">
              <%= c.text_field :name %> </div>
          <% end -%>
        </div>

        <div class="control-group">
          <%= f.label :full_name, class:'control-label' %>
          <div class="controls">
            <%= f.text_field :full_name, :autofocus => true %> </div>
        </div>

        <div class="control-group">
          <%= f.label :email, class:'control-label' %>
          <div class="controls">
            <%= f.email_field :email %> </div>
        </div>

        <div class="control-group">
          <%= f.label :password, class:'control-label' %>
          <div class="controls">
            <%= f.password_field :password %> </div>
        </div>

        <div class="control-group">
          <%= f.label :password_confirmation, class:'control-label' %>
          <div class="controls">
            <%= f.password_field :password_confirmation %> </div>
        </div>

        <div><%= f.submit "Sign up", class:'btn' %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
