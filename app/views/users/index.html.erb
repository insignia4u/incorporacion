<div class="container">
  <div class="row">
    <div class="span12">
      <%= link_to 'Invite a Collaborator', new_user_invitation_path, class:'btn pull-right' %>
      <h4 class="header">Collaborators</h4>
      <% if !users.empty? %>
        <table class="table table-striped sortable">
          <tr>
            <th class="header">Full Name</th>
            <th class="header">Email</th>
            <th class="header">Status</th>
            <th class="header">Date Joined</th>
            <th class="header"></th>
          </tr>
        <% users.each do |user| %>
          <tr>
            <td><%= user.full_name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.confirmed? %>
                <span class="label label-success">Active</span>
              <% else %>
                <span class="label">Inactive</span>
              <% end -%>
            </td>
            <td></td>
            <td>
              <div class="btn-group">
                <%= link_to "Approve", '#', class:'btn' %>
                <button data-toggle="dropdown" class="btn dropdown-toggle"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><a href="#">Edit Username</a><a href="#">Disable Account</a><a href="#">Destroy</a></li>
                </ul>
              </div>

            </td>
          </tr>
        <% end -%>
        </table>
      <% else %>
        <div class="alert alert-info">Not Collaborators yet.</div>
      <% end -%>
    </div>
  </div>
</div>
